{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "sourceMap": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES6",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "ESNext.Array",
      "ESNext.AsyncIterable",
      "ESNext.BigInt",
      "ESNext.Intl",
      "ESNext.Promise",
      "ESNext.String",
      "ESNext.Symbol"
    ],
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*"]
}
